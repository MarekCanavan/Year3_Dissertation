<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="8dp"
    android:id="@+id/parent_layout">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="8dp">

        <TextView
            android:id="@+id/tv_goal_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:maxLines="1"
            android:text="Goal Title"
            android:layout_toStartOf="@id/image_delete"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_toLeftOf="@id/image_delete" />

        <ImageView
            android:id="@+id/image_calender"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_calender" />

        <TextView
            android:id="@+id/tv_goal_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/image_calender"
            android:paddingStart="8dp"
            android:paddingLeft="8dp"
            android:paddingEnd="8dp"
            android:text="DATE"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/image_clock"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/tv_goal_date"
            android:src="@drawable/ic_access_time_black_24dp" />

        <TextView
            android:id="@+id/tv_goal_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/image_clock"
            android:paddingStart="8dp"
            android:paddingLeft="8dp"
            android:paddingEnd="8dp"
            android:text="TIME"
            android:textColor="@color/black"
            android:textSize="16dp" />


        <ImageView
            android:id="@+id/image_repeat"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/tv_goal_time"
            android:src="@drawable/ic_repeat" />


        <TextView
            android:id="@+id/tv_goal_repeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/image_repeat"
            android:paddingStart="8dp"
            android:paddingLeft="8dp"
            android:paddingEnd="8dp"
            android:text="Repeat"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/image_delete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_delete_black" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>